<Window x:Class="SocialMediaUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Media Uploader" Height="650" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Carga tu Contenido" FontSize="20" FontWeight="Bold" Margin="5"/>

            <Label Content="Título:"/>
            <TextBox Height="25" Margin="5"/>

            <Label Content="Descripción:"/>
            <TextBox Height="60" Margin="5" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Tags:"/>
            <TextBox Height="25" Margin="5"/>

            <Label Content="Video:"/>
            <Button Content="Subir Video" Margin="5"/>

            <Label Content="Imagen de Portada:"/>
            <Button Content="Subir Imagen" Margin="5"/>

            <Label Content="Música:"/>
            <Button Content="Subir Música" Margin="5"/>

            <Label Content="Programar Fecha:"/>
            <DatePicker Margin="5"/>

            <Label Content="Privacidad:"/>
            <ComboBox Margin="5">
                <ComboBoxItem Content="Público"/>
                <ComboBoxItem Content="Privado"/>
                <ComboBoxItem Content="Solo Amigos"/>
            </ComboBox>

            <Button Content="Subir Contenido" Margin="5" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
